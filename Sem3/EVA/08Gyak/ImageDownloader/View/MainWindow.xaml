<Window x:Class="ImageDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageDownloader"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="UrlTextBox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="800" Height="21"/>
        <Button x:Name="LoadImagesBtn" Content="Load images" HorizontalAlignment="Center" Margin="0,21,0,0" VerticalAlignment="Top" Width="800" Click="LoadImagesBtn_Click"/>
        <WrapPanel x:Name="ImgWrapPanel" Margin="10,46,10,47"/>
        <StatusBar Margin="0,392,0,0">
            <TextBlock x:Name="ImageCounterTextBlock" TextWrapping="Wrap" Text="Number of images: 0" Width="117"/>
            <ProgressBar x:Name="ImageProgressBar" Height="10" Width="100"/>
        </StatusBar>

    </Grid>
</Window>
