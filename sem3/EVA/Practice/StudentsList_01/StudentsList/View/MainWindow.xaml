<Window x:Class="ELTE.StudentsList.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Students List" Height="300" Width="500">
    <Grid>
        <ListBox ItemsSource="{Binding Students}" Margin="0,0,0,96">
            <!-- megadjuk az adatforrást -->
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <!-- megadjuk az adatok reprezentációját -->
                    <StackPanel Orientation="Horizontal">
                        <TextBox Text="{Binding FirstName}" Width="100" Margin="5"/>
                        <!-- kétirányú adatkötés a tartalomhoz -->
                        <TextBox Text="{Binding LastName}" Width="100" Margin="5"/>
                        <TextBox Text="{Binding StudentCode}" Width="100" Margin="5"/>
                        <TextBlock Text="{Binding FullName}" Margin="5"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Add new" HorizontalAlignment="Center" Margin="0,225,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.434,-0.113"
                Name="addNewBtn"
                IsEnabled="True"
                Command="{Binding AddFerrisCmd}"/>
        <Button Content="Write" HorizontalAlignment="Center" Margin="0,254,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.434,-0.113"
            x:Name="writeBtn"
            IsEnabled="True"
            Command="{Binding Write}"
            CommandParameter="{Binding RandomStudent}"/>
    </Grid>
</Window>
